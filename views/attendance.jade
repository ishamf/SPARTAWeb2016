extends layout

block script
  script(src="/javascripts/attendance/toggle.js")
block content
  h2
    a(href="../days/") back
  h1= dayid
  h2= dayname
  table.table
    tr
      td NIM
      td kehadiran
    each p in attendance
     tr
       td= p.NIM
       td.hadir(nim=p.NIM)= p.hadir
       td
         a.toggle(dayid=dayid, nim=p.NIM) toggle

